<div class="row my-5">
    <div class="col">
        <div class="row md-2 justify-content-end">
            <form name="frm" class="col-6 col-md-4 col-lg-3">
                <div class="input-group">
                    <input name="query" class="form-control" value="자바">
                    <button class="btn btn-primary">도서검색</button>
                </div>
            </form>
        </div>
        <!-- 검색결과 출력 -->
        <div id="div_books" class="row"></div>
        <!-- 페이지 이동 -->
        <div class="text-center">
            <button id="prev" class="btn btn-primary">이전</button>
            <span id="span_page" class="mx-3">1/10</span>
            <button id="next" class="btn btn-primary">다음</button>
        </div>
    </div>
</div>
<script type="x-handlebars-template" id="temp_books">
    <table class="table">
    {{#each documents}}
        <tr>
            <td><img src="{{thumbnail}}" width="50px"></td>
            <td>{{title}}</td>
            <td>{{price}}</td>
            <td>{{authors}}</td>
        </tr>
    {{/each}}
    </table>
</script>
<script>
    let query=$(frm.query).val();
    let page=1;

    $(frm).on("submit", function(e){
        e.preventDefault(); //막다
        query=$(frm.query).val();
        page=1;
        getBooks();
    });

    //다음 버튼 이동
    $("#next").on("click", function(){
        page++;
        getBooks();
    });

        //다음 버튼 이동
        $("#prev").on("click", function(){
        page--;
        getBooks();
    });

    //도서검색 데이터 불러오기
    getBooks();
    function getBooks(){
        $.ajax({
            type : "GET",
            url : "https://dapi.kakao.com/v3/search/book?target=title",
            headers : {"Authorization" : "KakaoAK d0b5f4b135aba43b9e204b8f8ef7dcf7"},
            data :{query : query, page : page, size : 5},
            success : function(data){
                //console.log(data)
                let temp=Handlebars.compile($("#temp_books").html());
                $("#div_books").html(temp(data));

                let last = Math.ceil(data.meta.pageable_count/5)
                $("#span_page").html(page + "/" + last);

                if(page==1)$("#prve").attr("disabled", true);
                else $("#prve").attr("disabled", false);

                if(data.meta.is_end) $("#next").attr("disabled", true);
                else $("#next").attr("disabled", false);
            },
        });
    }
</script>